<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/panelA"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:hapticFeedbackEnabled="true"/>

        <Button
            android:id="@+id/panelB"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:hapticFeedbackEnabled="true"
            android:textSize="25sp" />

        <Button
            android:id="@+id/panelC"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:hapticFeedbackEnabled="true"
            android:textSize="25sp" />

        <Button
            android:id="@+id/panelD"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:hapticFeedbackEnabled="true"/>

        <Button
            android:id="@+id/panelE"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:hapticFeedbackEnabled="true"
            android:textSize="25sp" />

        <Button
            android:id="@+id/panelF"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:hapticFeedbackEnabled="true"
            android:textSize="25sp" />

        <Button
            android:id="@+id/panelG"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:hapticFeedbackEnabled="true"
            android:textSize="25sp" />

        <Button
            android:id="@+id/panelH"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:hapticFeedbackEnabled="true"
            android:textSize="25sp" />
    </GridLayout>

    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="@string/score"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/score_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>